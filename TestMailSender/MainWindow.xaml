<Window x:Class="TestMailSender.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestMailSender"
        mc:Ignorable="d"
        Title="Отправка почты. Тест" Height="150" Width="400">
    <DockPanel>
        <StackPanel DockPanel.Dock="Left" Margin="20">
            <TextBlock x:Name="tb" Text="Пользователь" HorizontalAlignment="Center"/>
            <TextBox x:Name="UserNameEdit" Text="UserName" HorizontalAlignment="Center"/>
        </StackPanel>
        <StackPanel DockPanel.Dock="Right" Margin="20">
            <TextBlock Text="Пароль" HorizontalAlignment="Center"/>
            <PasswordBox x:Name="PasswordEdit"  Password="Password" HorizontalAlignment="Center"></PasswordBox>
        </StackPanel>
        <Button DockPanel.Dock="Bottom" Content="Отправить" Click="Button_Click" Margin="10" Padding="20"/>
        <Grid>
            
        </Grid>
    </DockPanel>
</Window>
